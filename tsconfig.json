{
  "compilerOptions": {
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "module": "esnext",
    "target": "esnext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "node",
    "noImplicitThis": false,
    "typeRoots": ["node_modules/@types", "types"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "./types/**/*", "./dist/**/*"]
}
