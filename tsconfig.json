{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2016",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "noImplicitThis": false,
    "typeRoots": ["node_modules/@types", "types"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "./types/**/*", "./dist/**/*"]
}
