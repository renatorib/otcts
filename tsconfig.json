{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2016",
    "lib": ["es6", "dom"],
    "rootDir": "src",
    "moduleResolution": "node",
    "noImplicitThis": false,
    "typeRoots": ["node_modules/@types", "types"]
  },
  "exclude": ["./types/**/*", "./dist/**/*"]
}
